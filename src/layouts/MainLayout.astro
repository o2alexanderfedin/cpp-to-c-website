---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'C++ to C Transpiler - Convert modern C++ code to portable C' } = Astro.props;
const base = import.meta.env.BASE_URL;
const currentPath = Astro.url.pathname;

// Define all tabs
const tabs = [
  { href: `${base}/`, label: 'Home' },
  { href: `${base}/about`, label: 'About' },
  { href: `${base}/features`, label: 'Features' },
  { href: `${base}/architecture`, label: 'Architecture' },
  { href: `${base}/getting-started`, label: 'Get Started' },
  { href: `${base}/playground`, label: 'Playground' },
  { href: `${base}/docs`, label: 'Docs' },
  { href: `${base}/examples`, label: 'Examples' },
  { href: `${base}/benchmarks`, label: 'Benchmarks' },
  { href: `${base}/metrics`, label: 'Metrics' },
  { href: `${base}/faq`, label: 'FAQ' },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style is:global>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        line-height: 1.6;
        color: #333;
        background: #fff;
      }

      a {
        color: #0066cc;
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
      }

      /* Tab Navigation Styles */
      .tab-header {
        background: #2a2a2a;
        border-bottom: 2px solid #444;
      }

      .tab-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
      }

      .tab-brand {
        color: white;
        font-size: 1.3rem;
        font-weight: bold;
        padding: 0.75rem 1rem;
        display: inline-block;
      }

      .tab-nav {
        display: flex;
        gap: 0.25rem;
        flex-wrap: wrap;
        margin-top: 0.5rem;
      }

      .tab {
        padding: 0.5rem 1rem;
        background: #1a1a1a;
        color: #bbb;
        border: 1px solid #444;
        border-bottom: none;
        border-radius: 6px 6px 0 0;
        text-decoration: none;
        transition: all 0.2s;
        position: relative;
      }

      .tab:hover {
        background: #252525;
        color: white;
        text-decoration: none;
      }

      .tab.active {
        background: white;
        color: #333;
        border-color: #444;
        border-bottom: 2px solid white;
        margin-bottom: -2px;
        font-weight: 500;
      }

      .tab.active:hover {
        background: white;
        color: #333;
      }
    </style>
  </head>
  <body>
    <header class="tab-header">
      <div class="tab-container">
        <a href={`${base}/`} class="tab-brand">C++ to C Transpiler</a>
        <nav class="tab-nav">
          {tabs.map((tab) => {
            const isActive = currentPath === tab.href ||
                           (tab.href !== `${base}/` && currentPath.startsWith(tab.href));
            return (
              <a
                href={tab.href}
                class={`tab ${isActive ? 'active' : ''}`}
              >
                {tab.label}
              </a>
            );
          })}
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer style="background: #f5f5f5; padding: 2rem 0; margin-top: 4rem; text-align: center;">
      <div class="container">
        <p>&copy; 2025 C++ to C Transpiler. Open Source.</p>
      </div>
    </footer>

    <script>
      // Verify cross-origin isolation for WebAssembly
      if (typeof window !== 'undefined') {
        console.log('Cross-origin isolated:', (self as any).crossOriginIsolated);
        console.log('SharedArrayBuffer available:', typeof SharedArrayBuffer !== 'undefined');

        // Display warning if not cross-origin isolated
        if (!(self as any).crossOriginIsolated) {
          console.warn('Cross-origin isolation is not enabled. WebAssembly multi-threading will not work.');
        } else {
          console.log('âœ“ Cross-origin isolation enabled - WebAssembly ready!');
        }
      }
    </script>
  </body>
</html>
