---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'C++ to C Transpiler - Convert modern C++ code to portable C' } = Astro.props;
const base = import.meta.env.BASE_URL;
const currentPath = Astro.url.pathname;

// Normalize paths for comparison (remove trailing slashes)
const normalizePath = (path: string) => path.replace(/\/$/, '') || '/';
const normalizedCurrent = normalizePath(currentPath);

// Define all tabs
const tabs = [
  { href: `${base}/`, label: 'Home', path: normalizePath(base) },
  { href: `${base}/about`, label: 'About', path: normalizePath(`${base}/about`) },
  { href: `${base}/features`, label: 'Features', path: normalizePath(`${base}/features`) },
  { href: `${base}/architecture`, label: 'Architecture', path: normalizePath(`${base}/architecture`) },
  { href: `${base}/getting-started`, label: 'Get Started', path: normalizePath(`${base}/getting-started`) },
  { href: `${base}/playground`, label: 'Playground', path: normalizePath(`${base}/playground`) },
  { href: `${base}/docs`, label: 'Docs', path: normalizePath(`${base}/docs`) },
  { href: `${base}/examples`, label: 'Examples', path: normalizePath(`${base}/examples`) },
  { href: `${base}/benchmarks`, label: 'Benchmarks', path: normalizePath(`${base}/benchmarks`) },
  { href: `${base}/metrics`, label: 'Metrics', path: normalizePath(`${base}/metrics`) },
  { href: `${base}/faq`, label: 'FAQ', path: normalizePath(`${base}/faq`) },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style is:global>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        line-height: 1.6;
        color: #333;
        background: #fff;
      }

      a {
        color: #0066cc;
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
      }

      main {
        padding: 0 1.5rem;
      }

      @media (max-width: 768px) {
        .container {
          padding: 0 1rem;
        }

        main {
          padding: 0 1rem;
        }

        .tab-container {
          padding: 0 1rem;
        }
      }

      /* Tab Navigation Styles */
      .tab-header {
        background: #2a2a2a;
        border-bottom: 2px solid #444;
      }

      .tab-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        flex-wrap: wrap;
      }

      .tab-brand {
        color: white;
        font-size: 1.3rem;
        font-weight: bold;
        padding: 0.75rem 0;
        flex-shrink: 0;
        margin-right: 1rem;
      }

      .tab-nav {
        display: flex;
        gap: 0.25rem;
        align-items: flex-end;
        flex: 1;
        flex-wrap: wrap;
        min-width: 0;
      }

      .tab {
        padding: 0.625rem 1rem;
        min-height: 44px;
        background: #1a1a1a;
        color: #bbb;
        border: 1px solid #444;
        border-bottom: none;
        border-radius: 6px 6px 0 0;
        text-decoration: none;
        transition: all 0.2s;
        position: relative;
        white-space: nowrap;
      }

      .tab:hover {
        background: #252525;
        color: white;
        text-decoration: none;
      }

      .tab.active {
        background: white;
        color: #333;
        border-color: #444;
        border-bottom: 2px solid white;
        margin-bottom: -2px;
        font-weight: 500;
      }

      .tab.active:hover {
        background: white;
        color: #333;
      }

      /* Skip Navigation Link */
      .skip-link {
        position: absolute;
        top: -40px;
        left: 0;
        background: #0066cc;
        color: white;
        padding: 8px 16px;
        text-decoration: none;
        z-index: 100;
        transition: top 0.2s ease;
      }

      .skip-link:focus {
        top: 0;
      }

      /* Focus Indicators for Keyboard Navigation */
      .tab:focus {
        outline: 2px solid #0066cc;
        outline-offset: 2px;
      }

      .tab:focus:not(:focus-visible) {
        outline: none;
      }

      .tab:focus-visible {
        outline: 2px solid #0066cc;
        outline-offset: 2px;
      }

      /* Screen reader only content */
      .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
      }

      /* Mobile Menu Button */
      .mobile-menu-button {
        display: none; /* Hidden by default (desktop) */
        background: none;
        border: none;
        color: white;
        cursor: pointer;
        padding: 0.625rem;
        min-width: 44px;
        min-height: 44px;
        border-radius: 4px;
        transition: background-color 0.2s;
        align-items: center;
        justify-content: center;
      }

      .mobile-menu-button:hover {
        background-color: rgba(255, 255, 255, 0.1);
      }

      .mobile-menu-button:focus {
        outline: 2px solid #0066cc;
        outline-offset: 2px;
      }

      .mobile-menu-button:focus:not(:focus-visible) {
        outline: none;
      }

      .mobile-menu-button:focus-visible {
        outline: 2px solid #0066cc;
        outline-offset: 2px;
      }

      /* Mobile Navigation Drawer */
      .mobile-nav-drawer {
        position: fixed;
        top: 0;
        left: -280px; /* Hidden off-screen */
        width: 280px;
        height: 100vh;
        background: #2a2a2a;
        z-index: 1000;
        transition: left 0.25s ease-out;
        display: flex;
        flex-direction: column;
        box-shadow: 2px 0 8px rgba(0, 0, 0, 0.3);
      }

      .mobile-nav-drawer.open {
        left: 0;
      }

      /* Mobile Navigation Header */
      .mobile-nav-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        border-bottom: 1px solid #444;
        background: #1a1a1a;
      }

      .mobile-nav-title {
        color: white;
        font-weight: bold;
        font-size: 1.1rem;
      }

      .mobile-nav-close {
        background: none;
        border: none;
        color: white;
        cursor: pointer;
        padding: 0.5rem;
        min-width: 44px;
        min-height: 44px;
        border-radius: 4px;
        transition: background-color 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .mobile-nav-close:hover {
        background-color: rgba(255, 255, 255, 0.1);
      }

      .mobile-nav-close:focus {
        outline: 2px solid #0066cc;
        outline-offset: 2px;
      }

      .mobile-nav-close:focus:not(:focus-visible) {
        outline: none;
      }

      .mobile-nav-close:focus-visible {
        outline: 2px solid #0066cc;
        outline-offset: 2px;
      }

      /* Mobile Navigation Content */
      .mobile-nav-content {
        flex: 1;
        overflow-y: auto;
        padding: 1rem 0;
      }

      .mobile-nav-item {
        display: block;
        padding: 0.875rem 1.5rem;
        color: #bbb;
        text-decoration: none;
        transition: background-color 0.2s, color 0.2s;
        border-left: 3px solid transparent;
        min-height: 44px;
        display: flex;
        align-items: center;
      }

      .mobile-nav-item:hover {
        background-color: rgba(255, 255, 255, 0.05);
        color: white;
        text-decoration: none;
      }

      .mobile-nav-item.active {
        background-color: rgba(255, 255, 255, 0.1);
        color: white;
        border-left-color: #0066cc;
        font-weight: 500;
      }

      .mobile-nav-item:focus {
        outline: 2px solid #0066cc;
        outline-offset: -2px;
      }

      .mobile-nav-item:focus:not(:focus-visible) {
        outline: none;
      }

      .mobile-nav-item:focus-visible {
        outline: 2px solid #0066cc;
        outline-offset: -2px;
      }

      /* Mobile Navigation Overlay */
      .mobile-nav-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: rgba(0, 0, 0, 0.5);
        z-index: 999;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.25s ease-out;
      }

      .mobile-nav-overlay.visible {
        opacity: 1;
        pointer-events: auto;
      }

      /* Prevent body scroll when menu is open */
      body.menu-open {
        overflow: hidden;
      }

      /* Responsive behavior */
      @media (max-width: 768px) {
        /* Show hamburger button on mobile */
        .mobile-menu-button {
          display: flex;
        }

        /* Hide desktop navigation on mobile */
        .tab-nav-desktop {
          display: none !important;
        }

        /* Adjust tab container for mobile */
        .tab-container {
          justify-content: space-between;
        }

        .tab-brand {
          margin-right: auto;
        }
      }

      @media (min-width: 769px) {
        /* Hide mobile elements on desktop */
        .mobile-menu-button,
        .mobile-nav-drawer,
        .mobile-nav-overlay {
          display: none !important;
        }
      }
    </style>
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <header class="tab-header">
      <div class="tab-container">
        <a href={`${base}/`} class="tab-brand">C++ to C Transpiler</a>

        <!-- Hamburger menu button (mobile only) -->
        <button
          class="mobile-menu-button"
          aria-label="Open navigation menu"
          aria-expanded="false"
          aria-controls="mobile-nav-drawer"
          type="button"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <line x1="3" y1="6" x2="21" y2="6"></line>
            <line x1="3" y1="12" x2="21" y2="12"></line>
            <line x1="3" y1="18" x2="21" y2="18"></line>
          </svg>
          <span class="sr-only">Menu</span>
        </button>

        <!-- Desktop navigation (hidden on mobile) -->
        <nav class="tab-nav tab-nav-desktop">
          {tabs.map((tab) => {
            const isActive = normalizedCurrent === tab.path;
            return (
              <a
                href={tab.href}
                class={`tab ${isActive ? 'active' : ''}`}
                aria-current={isActive ? 'page' : undefined}
              >
                {tab.label}
              </a>
            );
          })}
        </nav>
      </div>
    </header>

    <!-- Mobile navigation drawer -->
    <div id="mobile-nav-drawer" class="mobile-nav-drawer" aria-hidden="true">
      <div class="mobile-nav-header">
        <span class="mobile-nav-title">Navigation</span>
        <button class="mobile-nav-close" aria-label="Close navigation menu" type="button">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
          </svg>
        </button>
      </div>
      <nav class="mobile-nav-content" role="navigation" aria-label="Main navigation">
        {tabs.map((tab) => {
          const isActive = normalizedCurrent === tab.path;
          return (
            <a
              href={tab.href}
              class={`mobile-nav-item ${isActive ? 'active' : ''}`}
              aria-current={isActive ? 'page' : undefined}
            >
              {tab.label}
            </a>
          );
        })}
      </nav>
    </div>

    <!-- Overlay backdrop -->
    <div class="mobile-nav-overlay" aria-hidden="true"></div>

    <main id="main-content">
      <slot />
    </main>

    <footer style="background: #f5f5f5; padding: 2rem 0; margin-top: 4rem; text-align: center;">
      <div class="container">
        <p>&copy; 2025 C++ to C Transpiler. Open Source.</p>
      </div>
    </footer>

    <script>
      // Verify cross-origin isolation for WebAssembly
      if (typeof window !== 'undefined') {
        console.log('Cross-origin isolated:', (self as any).crossOriginIsolated);
        console.log('SharedArrayBuffer available:', typeof SharedArrayBuffer !== 'undefined');

        // Display warning if not cross-origin isolated
        if (!(self as any).crossOriginIsolated) {
          console.warn('Cross-origin isolation is not enabled. WebAssembly multi-threading will not work.');
        } else {
          console.log('âœ“ Cross-origin isolation enabled - WebAssembly ready!');
        }
      }
    </script>

    <script>
      // Mobile navigation menu functionality
      (() => {
        const menuButton = document.querySelector('.mobile-menu-button') as HTMLButtonElement | null;
        const drawer = document.querySelector('.mobile-nav-drawer') as HTMLElement | null;
        const closeButton = document.querySelector('.mobile-nav-close') as HTMLButtonElement | null;
        const overlay = document.querySelector('.mobile-nav-overlay') as HTMLElement | null;
        const navLinks = document.querySelectorAll('.mobile-nav-item');

        if (!menuButton || !drawer || !closeButton || !overlay) {
          return; // Mobile menu elements not found (likely on desktop)
        }

        let lastFocusedElement: HTMLElement | null = null;

        // Focus trap elements (first and last focusable elements in drawer)
        const getFocusableElements = (): HTMLElement[] => {
          const focusableSelectors = 'button, [href], input, select, textarea, [tabindex]:not([tabindex="-1"])';
          return Array.from(drawer.querySelectorAll(focusableSelectors)) as HTMLElement[];
        };

        // Open menu
        const openMenu = (): void => {
          // Store currently focused element
          lastFocusedElement = document.activeElement as HTMLElement;

          // Update ARIA states
          menuButton.setAttribute('aria-expanded', 'true');
          drawer.setAttribute('aria-hidden', 'false');
          overlay.setAttribute('aria-hidden', 'false');

          // Add classes
          drawer.classList.add('open');
          overlay.classList.add('visible');
          document.body.classList.add('menu-open');

          // Focus first link in drawer
          const focusableElements = getFocusableElements();
          if (focusableElements.length > 0) {
            // Focus first navigation link (skip close button)
            const firstNavLink = drawer.querySelector('.mobile-nav-item') as HTMLElement;
            if (firstNavLink) {
              firstNavLink.focus();
            } else {
              focusableElements[0].focus();
            }
          }
        };

        // Close menu
        const closeMenu = (): void => {
          // Update ARIA states
          menuButton.setAttribute('aria-expanded', 'false');
          drawer.setAttribute('aria-hidden', 'true');
          overlay.setAttribute('aria-hidden', 'true');

          // Remove classes
          drawer.classList.remove('open');
          overlay.classList.remove('visible');
          document.body.classList.remove('menu-open');

          // Restore focus to button that opened menu
          if (lastFocusedElement) {
            lastFocusedElement.focus();
          } else {
            menuButton.focus();
          }
        };

        // Toggle menu
        const toggleMenu = (): void => {
          const isOpen = drawer.classList.contains('open');
          if (isOpen) {
            closeMenu();
          } else {
            openMenu();
          }
        };

        // Focus trap (Tab cycles within drawer)
        const handleFocusTrap = (e: KeyboardEvent): void => {
          if (!drawer.classList.contains('open')) {
            return;
          }

          const focusableElements = getFocusableElements();
          if (focusableElements.length === 0) {
            return;
          }

          const firstElement = focusableElements[0];
          const lastElement = focusableElements[focusableElements.length - 1];

          if (e.key === 'Tab') {
            if (e.shiftKey) {
              // Shift + Tab: going backwards
              if (document.activeElement === firstElement) {
                e.preventDefault();
                lastElement.focus();
              }
            } else {
              // Tab: going forwards
              if (document.activeElement === lastElement) {
                e.preventDefault();
                firstElement.focus();
              }
            }
          }
        };

        // Event listeners
        menuButton.addEventListener('click', toggleMenu);
        closeButton.addEventListener('click', closeMenu);
        overlay.addEventListener('click', closeMenu);

        // Close menu when clicking a navigation link
        navLinks.forEach((link) => {
          link.addEventListener('click', () => {
            closeMenu();
          });
        });

        // Keyboard support
        document.addEventListener('keydown', (e: KeyboardEvent) => {
          if (drawer.classList.contains('open')) {
            if (e.key === 'Escape') {
              closeMenu();
            }
            handleFocusTrap(e);
          }
        });

        // Close menu on viewport resize (prevents issues when switching orientations)
        let resizeTimer: number;
        window.addEventListener('resize', () => {
          clearTimeout(resizeTimer);
          resizeTimer = window.setTimeout(() => {
            if (drawer.classList.contains('open') && window.innerWidth > 768) {
              closeMenu();
            }
          }, 250);
        });
      })();
    </script>
  </body>
</html>
