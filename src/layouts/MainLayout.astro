---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'C++ to C Transpiler - Convert modern C++ code to portable C' } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style is:global>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        line-height: 1.6;
        color: #333;
        background: #fff;
      }

      a {
        color: #0066cc;
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
      }
    </style>
  </head>
  <body>
    <header style="background: #1a1a1a; color: white; padding: 1rem 0;">
      <nav class="container" style="display: flex; justify-content: space-between; align-items: center;">
        <a href={`${base}/`} style="color: white; font-size: 1.5rem; font-weight: bold;">C++ to C Transpiler</a>
        <div style="display: flex; gap: 1.5rem; flex-wrap: wrap;">
          <a href={`${base}/`} style="color: white;">Home</a>
          <a href={`${base}/about`} style="color: white;">About</a>
          <a href={`${base}/features`} style="color: white;">Features</a>
          <a href={`${base}/architecture`} style="color: white;">Architecture</a>
          <a href={`${base}/getting-started`} style="color: white;">Get Started</a>
          <a href={`${base}/playground`} style="color: white;">Playground</a>
          <a href={`${base}/docs`} style="color: white;">Docs</a>
          <a href={`${base}/examples`} style="color: white;">Examples</a>
          <a href={`${base}/benchmarks`} style="color: white;">Benchmarks</a>
          <a href={`${base}/metrics`} style="color: white;">Metrics</a>
          <a href={`${base}/faq`} style="color: white;">FAQ</a>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer style="background: #f5f5f5; padding: 2rem 0; margin-top: 4rem; text-align: center;">
      <div class="container">
        <p>&copy; 2025 C++ to C Transpiler. Open Source.</p>
      </div>
    </footer>

    <script>
      // Verify cross-origin isolation for WebAssembly
      if (typeof window !== 'undefined') {
        console.log('Cross-origin isolated:', (self as any).crossOriginIsolated);
        console.log('SharedArrayBuffer available:', typeof SharedArrayBuffer !== 'undefined');

        // Display warning if not cross-origin isolated
        if (!(self as any).crossOriginIsolated) {
          console.warn('Cross-origin isolation is not enabled. WebAssembly multi-threading will not work.');
        } else {
          console.log('âœ“ Cross-origin isolation enabled - WebAssembly ready!');
        }
      }

      // Tab navigation with Ctrl+Tab and Ctrl+Shift+Tab
      document.addEventListener('keydown', (e) => {
        // Check for Ctrl+Tab or Ctrl+Shift+Tab
        if (e.ctrlKey && e.key === 'Tab') {
          e.preventDefault();

          // Get all navigation links (skip the logo/brand link)
          const navLinks = Array.from(document.querySelectorAll('header nav a')).slice(1);

          if (navLinks.length === 0) return;

          // Find current page index by matching href
          const currentPath = window.location.pathname;
          let currentIndex = navLinks.findIndex((link: any) => {
            const linkPath = new URL(link.href).pathname;
            return linkPath === currentPath;
          });

          // If not found, default to first tab
          if (currentIndex === -1) currentIndex = 0;

          // Calculate next index
          let nextIndex;
          if (e.shiftKey) {
            // Ctrl+Shift+Tab - go backward
            nextIndex = currentIndex - 1;
            if (nextIndex < 0) nextIndex = navLinks.length - 1;
          } else {
            // Ctrl+Tab - go forward
            nextIndex = currentIndex + 1;
            if (nextIndex >= navLinks.length) nextIndex = 0;
          }

          // Navigate to next tab
          (navLinks[nextIndex] as HTMLAnchorElement).click();
        }
      });
    </script>
  </body>
</html>
